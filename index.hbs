<!DOCTYPE html>
<html lang="uk">

    <head>
            <title>Comics scrape</title>
    </head>


    <body >

        <div>
            {{#each data}}
                <div style="padding: ;10px;marging: 10px; border: 1px solid #000; width: 400px">
                    <div>
                        <h3><a href="{{this.link}}" target="_blank">{{this.title}}</a></h3>
                        <p>{{formatDateTime this.date 1}}</p>
                    </div>
                    <div>
                        <a href="{{this.link}}" target="_blank"><img src="{{this.img}}" width="100%"></a>
                    </div>
                    <div>
                        <p>{{this.indexNum}}</p>
                        <p>{{this.description}}</p>
                    </div>
                </div>
                <br>
            {{/each}}
        </div>

    </body>

</html>